<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#CBEEDB">

    <!-- Title Bar -->

    <LinearLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FF03DAC5"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/title_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- All Programs Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/all_programs_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All Programs "
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:id="@+id/see_all_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See All"
                    android:background="#FF03DAC5"
                    android:textColor="@android:color/white"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="8dp" />
            </RelativeLayout>

            <!-- Horizontal Scroll Section -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="16dp">



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:orientation="horizontal">


                    <!-- Première image -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/gym"
                            android:scaleType="centerCrop"

                             />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Gym"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Deuxième image -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/muscle"
                            android:scaleType="centerCrop"

                             />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Muscle"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Troisième image -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/jambes"
                            android:scaleType="centerCrop"

                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Jambes"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Nouvelle image 1 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/workout"
                            android:scaleType="centerCrop"

                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Yoga"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Nouvelle image 2 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginEnd="16dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/pilate"
                            android:scaleType="centerCrop"

                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Pilates"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:gravity="center" />
                    </LinearLayout>

                    <!-- Nouvelle image 3 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/cardio"
                            android:scaleType="centerCrop"

                            />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Cardio"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:gravity="center" />
                    </LinearLayout>


                </LinearLayout>
            </HorizontalScrollView>



            <!-- My Programs Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Programs"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- LinearLayout pour les images en liste verticale -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <!-- Première image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/gym"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="8dp" />

                <!-- Deuxième image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/muscle"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="8dp" />

                <!-- Troisième image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/jambes"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="8dp" />

                <!-- Quatrième image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/workout"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="8dp" />

                <!-- Cinquième image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/pilate"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="8dp" />

                <!-- Sixième image -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/cardio"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="8dp" />
            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Program"
                android:background="#2196F3"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
