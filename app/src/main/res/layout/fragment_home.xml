<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/home_tab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Tab"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/home_tab_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#2196F3"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <!-- Title bar content -->
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/title_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:id="@+id/all_programs_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="All Programs"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/see_all_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See All"
                        android:background="#2196F3"
                        android:textColor="@android:color/white"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="8dp" />
                </RelativeLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/myImageView"
                            android:layout_width="100dp"
                            android:layout_height="150dp"
                            android:src="@drawable/gym"/>

                        <View
                            android:layout_width="180dp"
                            android:layout_height="150dp"
                            android:layout_marginEnd="16dp"
                            android:background="#FFA500" />

                        <View
                            android:layout_width="180dp"
                            android:layout_height="150dp"
                            android:background="#FFA500"
                            android:layout_marginEnd="16dp" />

                        <View
                            android:layout_width="180dp"
                            android:layout_height="150dp"
                            android:background="#FFA500"
                            android:layout_marginEnd="16dp" />

                        <View
                            android:layout_width="180dp"
                            android:layout_height="150dp"
                            android:background="#FFA500"
                            android:layout_marginEnd="16dp" />
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Programs"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create Program"
                    android:background="#2196F3"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="16dp" />
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
